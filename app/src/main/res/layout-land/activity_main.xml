<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- Left Joystick - positioned in bottom-left quadrant for easy thumb access -->
    <com.example.myapplication.Joystick
            android:id="@+id/leftJoystick"
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:defaultXPercent="0"
            app:defaultYPercent="-1"
            app:yReturnDefault="false"
            app:showText="false"
            android:layout_margin="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.9"/>

    <!-- Right Joystick - positioned in bottom-right quadrant for easy thumb access -->
    <com.example.myapplication.Joystick
            android:id="@+id/rightJoystick"
            android:layout_width="280dp"
            android:layout_height="280dp"
            app:showText="false"
            android:layout_margin="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintVertical_bias="0.9"/>

    <!-- Connect Button - positioned in upper left for easy reach -->
    <Button
            android:text="Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openSerialButton"
            android:onClick="openSerial"
            android:layout_margin="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Use Gyro Button - positioned adjacent to Connect button -->
    <Button
            android:text="Use Gyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/useGyroButton"
            android:onClick="useGyro"
            android:layout_marginStart="@dimen/margin_medium"
            app:layout_constraintStart_toEndOf="@id/openSerialButton"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Arm Switch - positioned in upper area, right side -->
    <Switch
            android:text="Arm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchArm"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Manual Switch - positioned below Arm switch -->
    <Switch
            android:text="Manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchManual"
            android:layout_marginTop="@dimen/margin_switch_top"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/switchArm"/>

    <!-- Toggle Layout Button - positioned near the top, center area -->
    <Button
            android:text="Portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleLayoutButton"
            android:onClick="toggleLayout"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- TextView for debug information - positioned in upper middle area -->
    <TextView
            android:text="0"
            android:keepScreenOn="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testView"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintEnd_toStartOf="@id/switchArm"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>