<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- Main Joystick - centered in lower half for easy thumb access in portrait -->
    <com.example.myapplication.Joystick
            android:id="@+id/leftJoystick"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:defaultXPercent="0"
            app:defaultYPercent="-1"
            app:yReturnDefault="false"
            app:showText="false"
            android:layout_marginBottom="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Right Joystick - hidden in portrait mode but still available for gyro mode -->
    <com.example.myapplication.Joystick
            android:id="@+id/rightJoystick"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:showText="false"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Top section controls -->
    <!-- Connect Button -->
    <Button
            android:text="Connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openSerialButton"
            android:onClick="openSerial"
            android:layout_margin="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Use Gyro Button -->
    <Button
            android:text="Use Gyro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/useGyroButton"
            android:onClick="useGyro"
            android:layout_marginStart="@dimen/margin_medium"
            app:layout_constraintStart_toEndOf="@id/openSerialButton"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Toggle Layout Button -->
    <Button
            android:text="Landscape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleLayoutButton"
            android:onClick="toggleLayout"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Debug TextView - positioned below the control buttons -->
    <TextView
            android:text="0"
            android:keepScreenOn="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testView"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/openSerialButton"
            android:visibility="visible"/>

    <!-- Arm Switch - positioned in upper area -->
    <Switch
            android:text="Arm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchArm"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintEnd_toStartOf="@id/switchManual"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Manual Switch - positioned adjacent to Arm switch -->
    <Switch
            android:text="Manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchManual"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>